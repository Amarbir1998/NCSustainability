@model IEnumerable<NCSustainability.Models.EventCategory>

@{
    ViewData["Title"] = "Index";
}

<h1>Categories</h1>

@if (User.IsInRole("Admin"))
{ 
    <p>
        <a asp-action="Create" class="btn btn-primary" >Create New</a>
    </p>
    }
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EventCategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EventCategoryName)
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.ID">Edit</a>
                        <a asp-action="Delete" class="btn btn-primary" asp-route-id="@item.ID">Delete</a>

                    }

                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.ID">Details</a>
                    @*<a asp-action="Subscribe" class="btn btn-primary" asp-route-id="@item.ID">Subscribe</a>*@

                </td>
            </tr>
        }
    </tbody>
</table>
