<div class="events">
    <h2 class="event">Events</h2>
    <div class="row text-center">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card h-100">
                    @{
                        if (item.imageContent != null && item.imageMimeType.Contains("image"))
                        {
                            string imageBase64 = Convert.ToBase64String(item.imageContent);
                            string imageSrc = string.Format("data:" + item.imageMimeType + ";base64,{0}", imageBase64);
                            <img class="card-img-top" src="@imageSrc" alt="Profile Picture of @item.Title" title="Profile Picture of @item.Title" height="200" width="300" />
                        }
                    }
                    <div class="card-body">
                        <h4 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h4>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Edate)</p>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.ID">Detail info about event</a>
                    </div>
                </div>
            </div>

        }
    </div>
